generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          String  @id @default(uuid())
  name                        String  @unique
  email                       String  @unique
  user_type                   String
  user_image                  String?
  user_completed_registration Boolean @default(false)
}

model SecretPins {
  user_id String @id
  pin     Int
}
