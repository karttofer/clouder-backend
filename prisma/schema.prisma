generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                          String  @id @default(uuid())
  nickname                    String  @unique
  password                    String?
  email                       String  @unique
  user_image                  String?
  user_completed_registration Boolean @default(false)
}

// All the pins in relation to change password or something else related to auth
model SecretPins {
  user_id String @id
  pin     Int
}
